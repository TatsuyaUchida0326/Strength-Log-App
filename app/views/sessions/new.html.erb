<% provide(:title, "login") %>
<div class="login-page-background">
  <div class="login-frame-container">
    <h1 class="login-title">Log in</h1>
    <div class="login-label-frame">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <div class="form-group">
            <%= f.label :email, "メールアドレス", class: "label-login" %>
            <%= f.email_field :email, class: 'login-form-control' %> <!-- classをform-controlに変更 -->
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード", class: "label-login" %>
            <%= f.password_field :password, class: 'login-form-control' %> <!-- classをform-controlに変更 -->
          </div>
    
          <div class="checkbox-container">
            <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
              <%= f.check_box :remember_me, id: "remember-me" %>
              <span>ログイン情報を記憶する</span>
            <% end %>
          </div>
    
          <%= f.submit "ログイン", class: "btn-login" %>
        <% end %>
        <p class="register-prompt">
          ユーザー登録がまだの場合は<%= link_to "こちら", signup_path, class: "new-link-this" %>
        </p>
    </div>
  </div>
</div>