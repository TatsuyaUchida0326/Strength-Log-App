<!-- トレーニング種目追加用モーダル -->
<div class="modal" id="newExerciseModal" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">新しい種目を追加: <span id="modalPartName"></span></h5>
        <button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: Exercise.new, local: true) do |form| %>
          <%= form.hidden_field :part, class: 'part-input' %>
          <div class="form-group align-left">
            <%= form.label :exercise, "種目名", class: "label-class-name" %>
            <%= form.text_field :exercise, class: 'form-control-exercisefield' %>
          </div>
          <div class="form-group">
            <%= form.submit "種目追加", class: "btn btn-primary new-submit-class" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
