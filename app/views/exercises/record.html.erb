<h1>トレーニング記録</h1>
<h2><%= @date %> - <%= @exercise.name %></h2>

<%= form_with(model: @exercise, url: exercise_record_path(@exercise), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :sets, "セット数" %>
    <%= form.number_field :sets, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight, "重量" %>
    <%= form.number_field :weight, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :reps, "回数" %>
    <%= form.number_field :reps, class: "form-control" %>
  </div>

  <%= form.submit "記録する", class: "btn btn-primary" %>
<% end %>
